#tcomment
script(src=theme.vendors.twikoo)
- var twikooConfig = JSON.stringify(theme.twikoo)
script(defer="defer").
  window.twikooConfig = !{twikooConfig}
  twikooConfig.el = '#tcomment'
  twikoo.init(twikooConfig)
  document.addEventListener("pjax:success", twikoo.init(twikooConfig));
  document.addEventListener("DOMContentLoaded", twikoo.init(twikooConfig));
